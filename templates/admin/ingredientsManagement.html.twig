{% block content %}
    <div class="bg displayData">
        <h3>Gestion des ingr√©dients</h3>

        <div class="head">
            <h4>Nom</h4>
            <h4>Categorie(s)</h4>
            <h4>Action</h4>
        </div>
        {% for ingredient in ingredients%}
            <form method="post"
                    action="{{ path('ingredient.edit', {
                                    'ingredientId' : ingredient.id}) }}"
                    class="formUpdateData">
                <div class="dataContent">
                    <p class="editInput" title="name">{{ ingredient.name }}</p>
                    {% for category in ingredient.ingredientCategories %}
                        <p class="editInput" title="category">{{ category.name }}</p>
                    {% endfor %}
                    <div class="action" align="center">
                        <button type="submit" name="submit">
                            <a href="">
                                <i class="fas fa-pen"></i>
                            </a>
                        </button>
                        <button>
                            <a href="{{ path('ingredient.delete', {'ingredientId' : ingredient.id}) }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </button>
                    </div>
                </div>
            </form>
        {% endfor %}
    </div>
{% endblock %}