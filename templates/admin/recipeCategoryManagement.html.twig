{% block content %}
    <div class="bg displayData">
        <h3>Gestion des catégories des recettes </h3>

        <div class="head">
            <h4>Nom</h4>
            <h4></h4>
            <h4>Action</h4>
        </div>
        {% for category in recipeCategories %}
            <form method="post" action="{{ path('category.edit', {'recipeCategoryId' : category.id}) }}" class="formUpdateData">
                <div class="dataContent">
                    <p class="editInput" title="name">{{ category.name }}</p>
                    <div class="action" align="center">
                        <button type="submit" name='submit'>
                            <i class="fas fa-pen"></i>
                        </button>
                        <button>
                            <a href="{{ path('category.delete', {'recipeCategoryId' : category.id}) }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </button>
                    </div>
                </div>
            </form>
        {% endfor %}
        <p>Ajouter une catégorie de recette</p>
    </div>
{% endblock %}