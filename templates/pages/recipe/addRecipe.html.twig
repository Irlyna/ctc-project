<section class="form display-form">
    <div class="bg">
        <h3>Ajouter une recette</h3>
        <form action="{{ path('recipe.add') }}" method="post" id="addRecipe">

            <div class="center">
                <input placeholder="Titre de votre recette" type="text" name="name">
            </div>

            <div class="center">
                <input placeholder="Ingredient(s) (séparez par des virgules)" type="text" name="ingredient">
            </div>

            <div class="center step">
                <textarea placeholder="Préparation de votre recette" name="step"></textarea>
            </div>

            <div class="center">
                <input placeholder="Catégorie(s) de la recette (séparez par des virgules)" type="text" name="recipeCategory">
            </div>
            <button type="submit" name="submit">Envoyer</button>
        </form>
    </div>
</section>