{% extends 'default/layout.html.twig' %}

    {% block head %}
        {{ parent() }}
    {% endblock %}

{% block content %}
    <div class="display">
        {% if not recipes %}
            <p>Désolée, aucune recettes enregistré à afficher pour le moment</p>
        {% endif %}

        {% for recipe in recipes %}
            <div class="bg display-recipe">
                <h2>{{ recipe.name }}<span class="read-more">+</span></h2>
                <div class="read-recipe">
                    <p>{{ recipe.content }}</p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}